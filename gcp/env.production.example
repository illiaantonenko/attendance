# Production Environment for Google Cloud Platform
# Copy this to .env and fill in the values

APP_NAME="Attendance System"
APP_ENV=production
APP_KEY=base64:GENERATE_NEW_KEY_WITH_php_artisan_key:generate
APP_DEBUG=false
APP_URL=https://your-cloud-run-url.run.app

# Logging
LOG_CHANNEL=stderr
LOG_LEVEL=warning

# Database - Cloud SQL (MySQL)
DB_CONNECTION=mysql
DB_HOST=/cloudsql/PROJECT_ID:REGION:INSTANCE_NAME
DB_PORT=3306
DB_DATABASE=attendance_db
DB_USERNAME=attendance
DB_PASSWORD=your_secure_password

# Redis - Memorystore (or disable if not needed)
REDIS_HOST=10.0.0.3
REDIS_PASSWORD=null
REDIS_PORT=6379
CACHE_DRIVER=redis
SESSION_DRIVER=redis
QUEUE_CONNECTION=redis

# If not using Memorystore, use database/file
# CACHE_DRIVER=database
# SESSION_DRIVER=database
# QUEUE_CONNECTION=database

# Mail (optional)
MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@attendance.local
MAIL_FROM_NAME="${APP_NAME}"

# Broadcasting (Soketi on Cloud Run or Pusher)
BROADCAST_DRIVER=pusher
PUSHER_APP_ID=your-pusher-app-id
PUSHER_APP_KEY=your-pusher-key
PUSHER_APP_SECRET=your-pusher-secret
PUSHER_HOST=
PUSHER_PORT=443
PUSHER_SCHEME=https
PUSHER_APP_CLUSTER=eu

# JWT for QR codes
JWT_SECRET=your_jwt_secret_key_here

# Sanctum
SANCTUM_STATEFUL_DOMAINS=your-cloud-run-url.run.app
SESSION_DOMAIN=.run.app

# Vite (production uses built assets)
VITE_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
VITE_PUSHER_HOST="${PUSHER_HOST}"
VITE_PUSHER_PORT="${PUSHER_PORT}"
VITE_PUSHER_SCHEME="${PUSHER_SCHEME}"
VITE_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"

